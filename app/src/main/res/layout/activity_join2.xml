<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.login.activity.Join2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="44dp">

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="회원가입"
            android:textSize="18sp"
            android:layout_marginEnd="151dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="118dp"
            android:fontFamily="@font/leferibaseregular"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="47dp"
        android:orientation="vertical">

        <Button
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:background="@drawable/icon_pf_test"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginTop="29dp"
            android:layout_marginStart="20dp"
            android:text="닉네임"
            android:textSize="16sp"
            android:letterSpacing="0.04"
            android:fontFamily="@font/leferibaseregular"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <EditText
            android:id="@+id/clearable_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/xbutton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/check"/>

        <Button
            android:id="@+id/clearable_button_clear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="37dp"
            android:background="@drawable/delbutton" />
    </RelativeLayout>


    <TextView
        android:layout_width="175dp"
        android:layout_height="54dp"
        android:layout_marginTop="53dp"
        android:text="선호하는 카테고리를 선택해주세요."
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/leferibasebold"
        android:letterSpacing="0.04"
        android:textColor="#000000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/livingbt"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/icon_shog_test"/>

        <Button
            android:id="@+id/testbt"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/icon2_test" />

        <Button
            android:id="@+id/diybt"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/icon_diy_test"/>

        <Button
            android:id="@+id/clothbt"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="27dp"
            android:background="@drawable/icon_clothing_test" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/furnbt"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:layout_marginStart="34dp"
            android:background="@drawable/icon_furniture_test"/>

        <Button
            android:id="@+id/treebt"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/icon_tree_test"/>

        <Button
            android:id="@+id/propbt"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/icon_prop_test"/>

        <Button
            android:id="@+id/beautybt"
            android:layout_width="56dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/icon_beauty_test" />
    </LinearLayout>

    <Button
        android:id="@+id/joinslbutton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/green_rg_button"
        android:layout_marginTop="47dp"
        android:layout_marginStart="20dp"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:fontFamily="@font/leferibasebold"
        android:letterSpacing="0.03"
        android:gravity="center"/>

</LinearLayout>