<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.fragment.mainhomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="20dp"
                app:iconifiedByDefault="false"
                app:queryBackground="@drawable/searchview_background"
                app:queryHint="검색어를 입력해주세요." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="이번주 환경소식"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                >

            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/livingbt2"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/icon_shog"/>

                <Button
                    android:id="@+id/testbt2"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/icon2" />

                <Button
                    android:id="@+id/diybt2"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/icon_diy"/>

                <Button
                    android:id="@+id/clothbt2"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="27dp"
                    android:background="@drawable/icon_clothing" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/furnbt2"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="34dp"
                    android:background="@drawable/icon_furniture"/>

                <Button
                    android:id="@+id/treebt2"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/icon_tree"/>

                <Button
                    android:id="@+id/propbt2"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/icon_prop"/>

                <Button
                    android:id="@+id/beautybt2"
                    android:layout_width="56dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/icon_beauty" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="지난 주 랭킹"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                >

            </TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="닉네임을 위한 추천"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                >

            </TextView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>