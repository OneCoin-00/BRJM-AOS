<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="109dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="109dp"
            android:layout_marginLeft="5dp"
            android:background="#E6E6E6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_test"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="안 입는 옷으로 가방 만들기"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:text="안 입는 옷 자꾸 버리지 마세요 ㅠ"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#666666"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/item_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:text="김시연"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#EEEEFA"
                android:text="37 views"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#000000"
                android:textSize="10sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="109dp">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/ic_launcher_background" />


            <Button
                android:id="@+id/likebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_img"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="85dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="86.3dp"

                android:background="@drawable/likebutton_test" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
