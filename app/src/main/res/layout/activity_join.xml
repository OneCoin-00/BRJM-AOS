<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.activity.JoinActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="44dp"
        >

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="회원가입"
            android:textSize="18sp"
            android:layout_marginEnd="151dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="118dp"
            android:fontFamily="@font/leferibaseregular"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_marginTop="41dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="이메일"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="308dp"
            android:fontFamily="@font/leferibaseregular"
            android:textSize="16sp"
            android:textColor="#868686"
            android:letterSpacing="0.03"/>

        <EditText

            android:id="@+id/question_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/leferibasebold"
            android:hint="hi"
            android:letterSpacing="0.03"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/question_email_green"
            android:layout_width="175dp"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:text=""
            android:textColor="#32a05f"
            android:textSize="14sp"
            android:letterSpacing="0.03"
            android:fontFamily="@font/leferibaseregular" />

        <Button
            android:id="@+id/join1_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/green_rg_button"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:text="인증번호"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="@font/leferibasebold"
            android:letterSpacing="0.03"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_marginTop="41dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_marginEnd="292dp"
            android:layout_height="24dp"
            android:text="인증번호"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/leferibaseregular"
            android:textSize="16sp"
            android:textColor="#868686"
            android:letterSpacing="0.03"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"
            android:hint="hi"
            android:fontFamily="@font/leferibasebold"
            android:letterSpacing="0.03"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:text="인증번호가 일치하지 않습니다."
            android:textColor="#e35252"
            android:textSize="14sp"
            android:letterSpacing="0.03"
            android:fontFamily="@font/leferibaseregular" />

        <Button
            android:id="@+id/join2_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/green_rg_button"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="@font/leferibasebold"
            android:letterSpacing="0.03"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>